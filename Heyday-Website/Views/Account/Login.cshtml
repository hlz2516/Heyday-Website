@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Heyday_Website.ViewModels.LoginDto
@section csses{
    <link href="~/css/signin.css" rel="stylesheet" />
    <style>
        .redfont {
            color: red
        }
    </style>
}

<div class="container">
    <form class="form-signin" asp-controller="Account" asp-action="Login" method="post">
        <img class="mb-4" src="/images/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label asp-for="Email" class="sr-only">Email address</label>
        <input type="email" id="inputEmail" asp-for="Email" class="form-control" placeholder="Email address" required autofocus>

        <label asp-for="Password" class="sr-only">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" required>

        <div class="checkbox mb-3">
            <label class="float-left">
                <input type="checkbox" asp-for="Remember"> Remember me
            </label>
            <a class="float-right" href="/Account/EmailValidation">忘记密码</a>
        </div>

        <div>
            <span class="redfont" asp-validation-for="Email"></span>
            <span class="redfont" asp-validation-for="Password"></span>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017-2020</p>
    </form>
</div>