@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Heyday_Website.ViewModels.ChangePasswordDto

<div class="container row">
    <div class="col-3"></div>
    <form id="myform" class="col-6" asp-controller="Account" asp-action="ChangePassword" method="post">
        <div class="form-group row">
            <label asp-for="Email" class="col-3 col-form-label"></label>
            <div class="col-9">
                <input type="email" id="email" class="form-control" asp-for="Email" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-3 col-form-label"></label>
            <div class="col-9">
                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PasswordVerify" class="col-3 col-form-label"></label>
            <div class="col-9">
                <input type="password" class="form-control" asp-for="PasswordVerify" placeholder="PasswordVerify">
                <span asp-validation-for="PasswordVerify" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary float-left ml-2">修改</button>
            <button class="btn btn-primary float-lg-right">返回</button>
        </div>
    </form>
    <div class="col-3"></div>
</div>
