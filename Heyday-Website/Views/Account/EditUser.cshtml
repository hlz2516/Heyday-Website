@model Heyday_Website.Models.User

<form asp-controller="Account" asp-action="EditUser" method="post">
    <div class="form-group">
        <label asp-for="Email">邮箱地址</label>
        <input type="email" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label asp-for="Name">用户名</label>
        <input type="text" class="form-control" asp-for="Name">
    </div>
    <div class="form-check form-check-inline">
        @Html.RadioButtonFor(m=>m.Role,true) 管理员
    </div>
    <div class="form-check form-check-inline">
        @Html.RadioButtonFor(m=>m.Role,false) 普通用户
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" onclick="alert('提交成功')">提交</button>
        <a asp-controller="Article" asp-action="UserManage">返回</a>
    </div>
</form>
