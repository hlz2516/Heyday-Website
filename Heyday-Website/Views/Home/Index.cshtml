@model IEnumerable<ArticlesOfIndexDto>

@section csses{ 
    <link href="~/css/carousel.css" rel="stylesheet" />
    <style>
        .div1 {
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .img1{
            width: 100%;
            height: auto;
        }
        h1 {
            font-weight: 400;
            text-align:center;
        }
    </style>
}

@section scripts{ 

}

@{
    //在这里对文章进行分类整理
    IList<ArticlesOfIndexDto> intros = new List<ArticlesOfIndexDto>();
    IList<ArticlesOfIndexDto> activities = new List<ArticlesOfIndexDto>();
    IList<ArticlesOfIndexDto> otherss = new List<ArticlesOfIndexDto>();
    foreach (var article in Model)
    {
        switch (article.CategoryName)
        {
            case "intro": if(intros.Count < 6) intros.Add(article);break;
            case "activity": if(activities.Count < 6) activities.Add(article); break;
            case "others": if(otherss.Count < 6) otherss.Add(article); break;
            default:
                break;
        }
    }
}

<main role="main">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/page1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/page2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/page3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>入 门</h4>
                    </div>
                    <div class="list-group text-left">
                        @foreach (var item in intros)
                        {
                            <a asp-controller="Article" asp-action="Show" asp-route-title="@item.Title" class="list-group-item list-group-item-action">@item.Title</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>活 动</h4>
                    </div>
                    <div class="list-group text-left">
                        @foreach (var item in activities)
                        {
                            <a asp-controller="Article" asp-action="Show" asp-route-title="@item.Title" class="list-group-item list-group-item-action">@item.Title</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>其 它</h4>
                    </div>
                    <div class="list-group text-left">
                        @foreach (var item in otherss)
                        {
                            <a asp-controller="Article" asp-action="Show" asp-route-title="@item.Title" class="list-group-item list-group-item-action">@item.Title</a>
                        }
                    </div>
                </div>
            </div>

        </div><!-- /.row -->
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h1>体验原滋原味的生存</h1>
                <p class="lead">&emsp;&emsp;如果您想找几个基友一起来体验新版1.16的Minecraft探险之旅，那么heyday将是您的不二之选！想跟猪灵交换物品吗？想在岩浆湖中骑着炽足兽漫游吗？想一览玄武岩三角洲的风光吗？那就赶紧加入我们吧！</p>
            </div>
            <div class="col-md-5 div1">
                <img class="img1" src="~/images/adventure.jpg" alt="图片加载失败，请找管理员" />
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h1>共建heyday，一起快乐</h1>
                <p class="lead">&emsp;&emsp;目前，heyday服务器处于发展阶段，很多区块都没有被开发。因此您可以大胆发挥想象力和创造力，在heyday服务器里建造属于你的建筑和红石器械！</p>
            </div>
            <div class="col-md-5 order-md-1 div1">
                <img class="img1" src="~/images/development.jpg" alt="图片加载失败，请找管理员" />
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h1>加入我们，构建未来</h1>
                <p class="lead">&emsp;&emsp;在不久的将来，我们将实施“建造者计划”，给heyday量身打造“飞猪”插件，但目前我们比较缺人手，因此欢迎有志之士加入我们，携手共建heyday的未来！</p>
            </div>
            <div class="col-md-5 div1">
                <img class="img1" src="~/images/build_future.jpg" alt="图片加载失败，请找管理员" width="500" />
            </div>
        </div>

        <hr class="featurette-divider">

        <!-- /END THE FEATURETTES -->

    </div><!-- /.container -->
    <!-- FOOTER -->
    <footer class="container">
        <p class="float-right"><a href="#">返回到顶部</a></p>
        <p>&copy; 2020 Heyday Studio</p>
    </footer>
</main>