@model IEnumerable<ArticlesOfIndexDto>

@section csses{ 
    <link href="~/css/carousel.css" rel="stylesheet" />
}

@section scripts{ 
    <script>

    </script>
}

@{
    //在这里对文章进行分类整理
    IList<ArticlesOfIndexDto> intros = new List<ArticlesOfIndexDto>();
    IList<ArticlesOfIndexDto> activities = new List<ArticlesOfIndexDto>();
    IList<ArticlesOfIndexDto> otherss = new List<ArticlesOfIndexDto>();
    foreach (var article in Model)
    {
        switch (article.CategoryName)
        {
            case "intro": intros.Add(article);break;
            case "activity": activities.Add(article); break;
            case "others": otherss.Add(article); break;
            default:
                break;
        }
    }
}

<main role="main">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/1.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/3.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing">

        <!-- Three columns of text below the carousel -->
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>入 门</h4>
                    </div>
                    <div class="list-group text-left">
                        @foreach (var item in intros)
                        {
                            <a asp-controller="Article" asp-action="Show" asp-route-title="@item.Title" class="list-group-item list-group-item-action">@item.Title</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>活 动</h4>
                    </div>
                    <div class="list-group text-left">
                        @foreach (var item in activities)
                        {
                            <a asp-controller="Article" asp-action="Show" asp-route-title="@item.Title" class="list-group-item list-group-item-action">@item.Title</a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h4>其 它</h4>
                    </div>
                    <div class="list-group text-left">
                        @foreach (var item in otherss)
                        {
                            <a class="list-group-item list-group-item-action">@item.Title</a>
                        }
                    </div>
                </div>
            </div>

        </div><!-- /.row -->
